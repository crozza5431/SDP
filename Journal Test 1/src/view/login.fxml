<StackPane id="Login" styleClass="login" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="controller.LoginController">
  <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="235.0">
    <Label id="title" layoutX="139.0" layoutY="0.0" text="Journal Buddy" />
    <!-- Prevent AnchorPane so that it's max = pref. This causes it to center in StackPane -->
    <TextField fx:id="userName" layoutX="62.0" layoutY="58.0" onAction="#handleLogin" prefWidth="126.0" />
    <PasswordField fx:id="password" layoutX="296.0" layoutY="58.0" onAction="#handleLogin" prefWidth="126.0" />
    <Label layoutX="229.0" layoutY="61.0" text="Password:" />
    <Label layoutX="16.0" layoutY="61.0" text="User:" />
    <Button fx:id="login" defaultButton="true" layoutX="194.0" layoutY="137.0" onAction="#handleLogin" text="Login" />
    <Button fx:id="register" defaultButton="true" layoutX="188.0" layoutY="172.0" onAction="#handleRegister" text="Register" />
    <Label fx:id="errorMessage" layoutX="80.0" layoutY="200.0" textFill="RED" />
    <Text layoutX="142.0" layoutY="34.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Your Personal Problem Book" />
  </AnchorPane>
  <stylesheets>
    <URL value="@Login.css" />
  </stylesheets>
</StackPane>
